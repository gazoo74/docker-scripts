_docker_archive()
{
	local cur prev words cword
	_init_completion || return

	local short_opts="-j -h"
	local long_opts="--json --help"
	if [[ "$cur" == -* ]]; then
		COMPREPLY=( $( compgen -W "$short_opts $long_opts" -- "$cur" ) )
		return
	fi

	_filedir tar
} &&
complete -F _docker_archive docker-archive
